{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"src/server.ts",
		"src/config/config.ts",
		"src/controllers/usersController.ts",
		"src/models/User.ts",
		"src/scripts/seedsDB.tsx",
		"src/scripts/seedsDB.ts"
	]
}
